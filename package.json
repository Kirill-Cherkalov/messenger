{
  "name": "koa-starter",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Effective Soft Team",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">10.15.0"
  },
  "scripts": {
    "pm2": "pm2",
    "knex": "knex --knexfile ./knex/knexfile.migrate.ts",
    "migrate": "yarn knex migrate:latest",
    "migration:make": "yarn knex migrate:make",
    "migration:rollback": "yarn knex migrate:rollback",
    "start:dev": "yarn pm2 startOrRestart pm2/development.json",
    "start:debug": "nodemon --inspect=19771 index.ts",
    "start:prod": "yarn pm2 startOrRestart pm2/production.json",
    "build": "rm -rf build/ & tsc & cp .env build/.env",
    "lint": "eslint app --ext .ts"
  },
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "@sentry/node": "^5.6.2",
    "bcrypt": "^3.0.6",
    "dotenv": "^8.1.0",
    "joi": "^14.3.1",
    "knex": "^0.19.4",
    "koa": "^2.8.1",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.1.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-passport": "^4.1.3",
    "koa-router": "^7.4.0",
    "mysql": "^2.17.1",
    "nodemon": "^1.19.2",
    "objection": "^1.6.9",
    "objection-timestamps": "^3.0.2",
    "objection-visibility": "^0.4.0",
    "passport-local": "^1.0.0",
    "source-map-support": "^0.5.13",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/joi": "^14.3.3",
    "@types/koa": "^2.0.49",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-passport": "^4.0.2",
    "@types/koa-router": "^7.0.42",
    "@types/node": "^12.7.5",
    "@types/passport-local": "^1.0.33",
    "@typescript-eslint/parser": "^2.3.1",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.5",
    "lint-staged": "^9.4.0",
    "pm2": "^3.5.1",
    "prettier": "^1.18.2",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "lint-staged": {
    "app/**/*.ts": [
      "prettier --write",
      "git add",
      "eslint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
